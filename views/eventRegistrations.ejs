<!DOCTYPE html>
<html lang="vi">
<head>
  <meta charset="UTF-8" />
  <title>Đăng Ký Sự Kiện</title>
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body class="bg-light">
    <%- include('partials/header') %>
  <div class="container mt-5">
    <h2 class="text-center mb-4">Danh sách đăng ký sự kiện</h2>

    <div class="table-responsive">
      <table class="table table-bordered table-hover align-middle">
        <thead class="table-dark text-center">
          <tr>
            <th>ID đăng ký</th>
            <th>ID sự kiện</th>
            <th>ID người dùng</th>
            <th>Ngày đăng ký</th>
            <th>Trạng thái</th>
          </tr>
        </thead>
        <tbody>
          <% if (registrations.length === 0) { %>
            <tr><td colspan="5" class="text-center">Không có đăng ký nào.</td></tr>
          <% } else { %>
            <% registrations.forEach(r => { %>
              <tr>
                <td><%= r.RegistrationID %></td>
                <td><%= r.EventID %></td>
                <td><%= r.UserID %></td>
                <td><%= new Date(r.RegistrationDate).toLocaleString() %></td>
                <td>
                  <span class="badge bg-<%= 
                    r.Status === 'Pending' ? 'warning' : 
                    r.Status === 'Confirmed' ? 'success' : 
                    'danger' 
                  %>"><%= r.Status %></span>
                </td>
              </tr>
            <% }) %>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>
  <%- include('partials/footer') %>
</body>
</html>
