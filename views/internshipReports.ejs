<!DOCTYPE html>
<html lang="vi">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Báo cáo thực tập</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <%- include('partials/header') %>
  <div class="container my-5">
    <h1 class="mb-4 text-center">📄 Danh sách báo cáo thực tập</h1>

    <div class="table-responsive">
      <table class="table table-striped table-bordered align-middle">
        <thead class="table-dark">
          <tr>
            <th scope="col">ReportID</th>
            <th scope="col">InternshipID</th>
            <th scope="col">StudentID</th>
            <th scope="col">ReportTitle</th>
            <th scope="col">ReportContent</th>
            <th scope="col">SubmissionDate</th>
            <th scope="col">Status</th>
            <th scope="col">Score</th>
            <th scope="col">Feedback</th>
            <th scope="col">RegulationID</th>
          </tr>
        </thead>
        <tbody>
          <% if (reports.length === 0) { %>
            <tr>
              <td colspan="10" class="text-center">Không có báo cáo thực tập nào.</td>
            </tr>
          <% } else { %>
            <% reports.forEach(report => { %>
              <tr>
                <td><%= report.ReportID %></td>
                <td><%= report.InternshipID %></td>
                <td><%= report.StudentID %></td>
                <td><%= report.ReportTitle %></td>
                <td><%= report.ReportContent ? report.ReportContent.substring(0, 100) + '...' : '' %></td>
                <td><%= new Date(report.SubmissionDate).toLocaleString('vi-VN') %></td>
                <td><%= report.Status %></td>
                <td><%= report.Score !== null ? report.Score.toFixed(2) : '' %></td>
                <td><%= report.Feedback ? report.Feedback.substring(0, 100) + '...' : '' %></td>
                <td><%= report.RegulationID %></td>
              </tr>
            <% }) %>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>
  <%- include('partials/footer') %>
</body>
</html>
