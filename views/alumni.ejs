<!DOCTYPE html>
<html lang="vi">
<head>
  <meta charset="UTF-8">
  <title>Danh sách Cựu Sinh Viên</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">
    <%- include('partials/header') %>
  <div class="container mt-5">
    <h2 class="text-center mb-4">Thông Tin Cựu Sinh Viên</h2>

    <div class="table-responsive">
      <table class="table table-bordered table-hover align-middle">
        <thead class="table-dark text-center">
          <tr>
            <th>Alumni ID</th>
            <th>Student ID</th>
            <th>Họ</th>
            <th>Tên</th>
            <th>Email</th>
            <th>Điện thoại</th>
            <th>Năm tốt nghiệp</th>
            <th>Công việc hiện tại</th>
            <th>Công ty</th>
            <th>Ghi chú</th>
          </tr>
        </thead>
        <tbody>
          <% if (alumni.length === 0) { %>
            <tr><td colspan="10" class="text-center">Không có dữ liệu cựu sinh viên.</td></tr>
          <% } else { %>
            <% alumni.forEach(a => { %>
              <tr>
                <td><%= a.AlumniID %></td>
                <td><%= a.StudentID || '-' %></td>
                <td><%= a.LastName %></td>
                <td><%= a.FirstName %></td>
                <td><%= a.Email || '-' %></td>
                <td><%= a.Phone || '-' %></td>
                <td><%= a.GraduationYear || '-' %></td>
                <td><%= a.CurrentJob || '-' %></td>
                <td><%= a.Company || '-' %></td>
                <td><%= a.Notes || '' %></td>
              </tr>
            <% }) %>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>
  <%- include('partials/footer') %>
</body>
</html>
