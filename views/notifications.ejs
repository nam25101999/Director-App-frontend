<!DOCTYPE html>
<html lang="vi">
<head>
  <meta charset="UTF-8" />
  <title>Thông Báo</title>
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body class="bg-light">
    <%- include('partials/header') %>
  <div class="container mt-5">
    <h2 class="mb-4 text-center">Danh sách Thông Báo</h2>

    <div class="table-responsive">
      <table class="table table-bordered table-hover align-middle">
        <thead class="table-primary text-center">
          <tr>
            <th>ID</th>
            <th>ID Người Dùng</th>
            <th>Tiêu đề</th>
            <th>Nội dung</th>
            <th>Loại thông báo</th>
            <th>Ngày gửi</th>
            <th>Trạng thái</th>
          </tr>
        </thead>
        <tbody>
          <% if (notifications.length === 0) { %>
            <tr><td colspan="7" class="text-center">Không có thông báo nào.</td></tr>
          <% } else { %>
            <% notifications.forEach(n => { %>
              <tr>
                <td><%= n.NotificationID %></td>
                <td><%= n.UserID %></td>
                <td><%= n.Title %></td>
                <td><%= n.Content %></td>
                <td><%= n.NotificationType %></td>
                <td><%= new Date(n.SentDate).toLocaleString() %></td>
                <td>
                  <span class="badge bg-<%= n.ReadStatus === 'Read' ? 'success' : 'secondary' %>">
                    <%= n.ReadStatus %>
                  </span>
                </td>
              </tr>
            <% }) %>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>
  <%- include('partials/footer') %>
</body>
</html>
