<!DOCTYPE html>
<html lang="vi">
<head>
  <meta charset="UTF-8">
  <title>Danh sách Khảo sát</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">
    <%- include('partials/header') %>
  <div class="container mt-5">
    <h2 class="text-center mb-4">Bảng Khảo Sát</h2>

    <div class="table-responsive">
      <table class="table table-bordered table-hover align-middle">
        <thead class="table-dark text-center">
          <tr>
            <th>ID</th>
            <th>Tiêu đề</th>
            <th>Mô tả</th>
            <th>Đối tượng</th>
            <th>Ngày bắt đầu</th>
            <th>Ngày kết thúc</th>
            <th>Trạng thái</th>
          </tr>
        </thead>
        <tbody>
          <% if (surveys.length === 0) { %>
            <tr>
              <td colspan="7" class="text-center">Không có dữ liệu khảo sát.</td>
            </tr>
          <% } else { %>
            <% surveys.forEach(s => { %>
              <tr>
                <td class="text-center"><%= s.SurveyID %></td>
                <td><%= s.Title %></td>
                <td><%= s.Description || '-' %></td>
                <td class="text-center">
                  <% if (s.ApplicableTo === 'All') { %>
                    <span class="badge bg-info text-dark">Tất cả</span>
                  <% } else { %>
                    <span class="badge bg-secondary"><%= s.ApplicableTo %></span>
                  <% } %>
                </td>
                <td class="text-center"><%= s.StartDate %></td>
                <td class="text-center"><%= s.EndDate %></td>
                <td class="text-center">
                  <% if (s.Status === 'Open') { %>
                    <span class="badge bg-success">Mở</span>
                  <% } else { %>
                    <span class="badge bg-danger">Đã đóng</span>
                  <% } %>
                </td>
              </tr>
            <% }) %>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>
  <%- include('partials/footer') %>

</body>
</html>
