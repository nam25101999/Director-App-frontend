<!DOCTYPE html>
<html lang="vi">
<head>
  <meta charset="UTF-8">
  <title>Phản hồi khảo sát</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">
    <%- include('partials/header') %>
  <div class="container mt-5">
    <h2 class="text-center mb-4">Bảng Phản Hồi Khảo Sát</h2>

    <div class="table-responsive">
      <table class="table table-bordered table-hover align-middle">
        <thead class="table-dark text-center">
          <tr>
            <th>ID</th>
            <th>Survey ID</th>
            <th>User ID</th>
            <th>Điểm đánh giá</th>
            <th>Nhận xét</th>
            <th>Ngày phản hồi</th>
          </tr>
        </thead>
        <tbody>
          <% if (feedbacks.length === 0) { %>
            <tr>
              <td colspan="6" class="text-center">Không có phản hồi nào.</td>
            </tr>
          <% } else { %>
            <% feedbacks.forEach(fb => { %>
              <tr>
                <td class="text-center"><%= fb.FeedbackID %></td>
                <td class="text-center"><%= fb.SurveyID %></td>
                <td class="text-center"><%= fb.UserID %></td>
                <td class="text-center"><%= fb.Rating %></td>
                <td><%= fb.Comments || '-' %></td>
                <td class="text-center"><%= fb.SubmissionDate %></td>
              </tr>
            <% }) %>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>
  <%- include('partials/footer') %>
</body>
</html>
